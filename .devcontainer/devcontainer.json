{
    "name": "PCM Player Development",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint"
            ]
        }
    },
    "postCreateCommand": "pip install pyinstaller",
    "forwardPorts": [8000],
    "portsAttributes": {
        "8000": {
            "label": "PCM Player",
            "onAutoForward": "notify"
        }
    }
}
